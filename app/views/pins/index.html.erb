<h1>Pins</h1>

<table  class="table">
  <thead  class="table">
    <tr>
      <th scope="row">Title</th>
      <th scope="row">Picture</th>
      <th scope="row">Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.picture %></td>
        <td><%= pin.comment %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', pin , class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', pin,class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
